<div class="container-fluid">
  <div class="row mt-5">
    <div class="col-2 col-md-2 ml-5">
      <!-- ジャンル検索サイドバー  -->
      <%= render 'users/users/info', user: current_user %>
      <div class="mt-4">
      <%= render 'users/components/category', categories: @categories %>
      </div>
    </div>
    <div class="col-9 col-md-9 ml-5">
       <h3 class="p-3 mb-2 w-50 text-center" style="color: #bc8f8f; background: #8f6552; border-left: solid 5px #6c3524; border-bottom: solid 3px #7b5544;"><strong>成分一覧</strong>（全<%= @all_components.count %>件）</h3>
        <div>
             <table class="table table-hover mt-4">
      <thead>
        <tr class="thead" style="background-color: #bed3ca;">
          <th>成分カテゴリー名</th>
          <th>成分名</th>
          <th>成分説明</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
              <% @components.each do |component| %>
          <tr>
            <td><%= component.comp_category.name %></td>
            <td><%= link_to component.name.truncate(15),component_path(component), class:"text-secondary" %></td>
            <td><%= component.explanation.truncate(30) %></td>
            <td>
              <% if component.status? %>
                <p class="text-success">現在使用可能</p>
              <% else %>
                <p class="text-secondary">現在使用不可</p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
        </div>
    </div>
    <div class="col-6 offset-3 text-center text-dark" ><%= paginate @components %></div>
  </div>
</div>