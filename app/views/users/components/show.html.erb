<div class="container-fluid">
  <div class="row mt-5 mb-5">
    <div class="col-md-2 ml-5">
      <!-- 利用者情報サイドバー  -->
      <%= render 'users/users/info', user: current_user %>
      <!-- ジャンル検索サイドバー  -->
      <div class="mt-4">
      <%= render 'users/components/category', categories: @categories %>
      </div>
    </div>
    <div class="col-md-8 mt-5 ml-5">
      <!-- 商品詳細 -->
      <div class="card">
        <div class="card-header">
          <h3><strong><%= @component.name %></strong></h3>
        </div>
        <div class="card-body">
          <p class="mt-3"><%= @component.explanation %></p>
        </div>
      </div>
    </div>
  </div>
</div>