<div class="container-fluid">
  <div class="row mt-5">
    <div class="col-9 col-md-9">
      <h3 class="p-3 mb-2 w-50 text-center" style="color: #bc8f8f; background: #8f6552; border-left: solid 5px #6c3524; border-bottom: solid 3px #7b5544;"><strong>商品一覧</strong>（全<%= @components.count %>件）</h3>
      <div class="col-2 col-md-2">
      <!-- 利用者情報サイドバー  -->
      <%= render 'users/users/info', user: current_user %>
    </div>
      <% @components.each do |component| %>
        <div class="item-box">
          <table class="table table-borderless">
            <tr>
              <th><%= component.id %></th>
            </tr>
            <tr>
              <th><%#= component.comp_categories.name %></th>
            </tr>
            <tr>
              <th><%= link_to component.name.truncate(15), component_path(component), class:"text-secondary" %></th>
            </tr>
          </table>
        </div>
      <% end %>
    </div>
    <div class="col-2 col-md-2">
      <!-- ジャンル検索サイドバー  -->
      <%= render 'users/items/category', categories: @categories %>
    </div>
    <div class="col-6 offset-3 text-center text-dark" ><%#= paginate @items %></div>
  </div>
</div>