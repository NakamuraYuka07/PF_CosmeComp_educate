<div class="container-fluid">
  <div class="row mt-3">
    <div class="col-md-4 offset-4 mb-5">
      <div class="form-group">
　　　<%= form_for @inquiry, :url => inquiry_confirm_path do |f| %>
        <div class="page-header">
          <h3 class="text-center mt-5">お問い合わせ</h3>
        </div>
          <% if @inquiry.errors.any? %>
            <div class="alert alert-danger" role="alert">
              <strong>入力内容にエラーがあります</strong>
              <ul>
                <% @inquiry.errors.each do |attr, msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
           </div>
          <% end %>
            <div class="form-group">
              <div class="text-center">名前<span class="text-danger">（必須）</span></div>
              <div><%= f.text_field :name, size:'20x5', class: "mt-3 form-control" %></div>
            </div>
            <div class="form-group">
              <div class="text-center">メールアドレス<span class="text-danger">（必須）</span></div>
              <div><%= f.text_field :email, size:'20x5', class: "mt-3 form-control" %></div>
            </div>
            <div class="form-group">
              <div class="text-center">お問い合わせ内容</div>
              <div><%= f.text_area :message, size:'52x5', class: "mt-3 form-control" %></div>
            </div>
            <div class="text-center mb-5">
              <%= f.submit '確認', class: 'col-md-5 btn btn-outline-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
</div>