<div class="container mt-4">
 <h4 class="p-3 mb-2 w-25 text-center" style="color: #494949; background: #80aba9; border-left: solid 5px #2f4f4f;">成分新規登録</h4>
</div>

      <div class="container", style="margin-left: 30rem;">
       <div class="row">
        <div class="col-md-6">
        <%= form_with model:@component,url:admin_components_path, local:true do |f| %>
        <table class='table table-borderless'>
          <tr>
           <td><%= f.label :成分カテゴリー ,class: "col-xs-3 fix" %></td>
           <td><%= f.collection_select(:comp_category_id, @comp_category, :id, :name,:prompt => "--選択してください--") %></td>
          </tr>
          <tr>
           <td><%= f.label :成分名 ,class: "col-xs-3" %></td>
           <td><%= f.text_field :name, autofocus: true, autocomplete: "name" , placeholder: "成分名", class: "col-auto form-control form-control-md w-100" %></td>
          </tr>
          <tr>
           <td><%= f.label :成分説明 ,class: "col-xs-3" %></td>
           <td><%= f.text_area :explanation, autofocus: true, autocomplete: "explanation" , placeholder: "ここに説明文を記述します", class: "col-auto form-control form-control-md w-100" %></td>
          </tr>
          <tr>
           <td><%= f.label :使用ステータス  ,class: "col-xs-3 fix" %></td>
           <td>
            <%= f.radio_button :status, :true %> 現在使用可能
            <%= f.radio_button :status, :false %> 現在使用不可
           </td>
          </tr>
          <tr>
           <td></td>
           <td><%= f.submit "新規登録", class: "btn btn-outline-success" %></td>
          </tr>
        </table>
        <% end %>
        </div>
      </div>
    </div>