<div class="container">
  <div class="row mt-4 mb-3">
   <div class="d-flex justify-content-between w-100">
     <h4 class="p-3 mb-2 text-dark w-25 text-center" style="color: #494949; background: #80aba9; border-left: solid 5px #2f4f4f;">成分一覧</h4>
     <h1>
       <%= link_to new_admin_item_path, class: "text-right" do %>
        <i class="fas fa-plus-circle text-info"></i>
       <%end%>
     </h1>
   </div>
    <table class="table table-hover mt-4">
      <thead>
        <tr class="thead" style="background-color: #bed3ca;">
          <th>成分ID</th>
          <th>成分カテゴリー</th>
          <th>成分名</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @components.each do |component| %>
          <tr>
            <td><%= link_to component.name,admin_component_path(component), class:"text-secondary" %></td>
            <td><%= component.comp_category.name %></td>
            <td><%= component.status %></td>
            <td>
              <% if component.status? %>
                <p class="text-success">販売</p>
              <% else %>
                <p class="text-secondary">廃盤</p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to "成分を追加する" ,new_admin_component_path %>
    <%= link_to "成分カテゴリーを追加する" ,admin_comp_categories_path %>
  </div>
</div>