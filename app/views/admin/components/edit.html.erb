<div class="container mt-5">
 <h4 class="p-3 mb-2 w-25 text-center" style="color: #494949; background: #80aba9; border-left: solid 5px #2f4f4f;">成分詳細編集</h4>
</div>
      <div class="container", style="margin-left: 30rem;">
       <div class="row">
        <div class="col-md-6">
        <%= form_with model:@component, url:admin_component_path(@component), local:true do |f| %>
        <table class='table table-borderless'>
          <tr>
           <td><%= f.label :成分カテゴリー ,class: "col-xs-3 fix" %></td>
           <td><%= f.collection_select(:comp_category_id, @comp_category, :id, :name,:prompt => "選択してください") %></td>
          </tr>
          <tr>
           <td><%= f.label :成分名 ,class: "col-xs-3" %></td>
           <td><%= f.text_field :name, autofocus: true, autocomplete: "name" ,class: "col-auto form-control form-control-md w-100"%></td>
          </tr>
          <tr>
           <td><%= f.label :成分説明 ,class: "col-xs-3" %></td>
           <td><%= f.text_area :explanation, autofocus: true, autocomplete: "explanation" ,class: "col-auto form-control form-control-md w-100"%></td>
          </tr>
           <td><%= f.label :ステータス  ,class: "col-xs-3 fix" %></td>
           <td>
            <%= f.radio_button :status, :true %> 現在使用可能
            <%= f.radio_button :status, :false %> 現在使用不可
           </td>
          </tr>
          <tr>
           <td></td>
           <td><%= f.submit "変更を保存", class: "btn btn-outline-success" %></td>
          </tr>
        </table>
        <% end %>
        </div>
      </div>
    </div>