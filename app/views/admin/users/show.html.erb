<div class='container px-5 px-sm-0'>
  <div class='row mb-3 mt-4'>
    <div class='col-md-6 offset-3'>
      <!-- tr部分全てにかかったようになる -->
      <h4 class="p-3 mb-2 w-50 text-center" style="color: #494949; background: #80aba9; border-left: solid 5px #2f4f4f;"><%= @user.nickname %>さんの会員詳細</h4>
      <div class='card'>
        <div class="card-header">
          会員ID　ネックネーム
        </div>
        <div class="card-body">
          <%= @user.id %>　<%= @user.nickname %>
        </div>
        <div class="card-header">
          お誕生日　年代
        </div>
        <div class="card-body">
          <%= @user.birth_month %><%= @user.birth_day %>　<%= @user.age %>
        </div>
        <div class="card-header">
          肌質
        </div>
        <div class="card-body">
          <%= @user.skin_type %>
        </div>
        <div class="card-header">
          会員ステータス
        </div>
        <div class="card-body">
           <% if @user.is_deleted == true%>
              <p class="text-secondary">退会済</p>
            <% else %>
              <p class="text-success">有効</p>
            <% end %>
        </div>
      </div>
      <div class="mt-3 text-center mb-5">
          <%= link_to "編集する", edit_admin_user_path(@user.id), class: "btn btn-outline-success col-md-5 mb-4" %>
      </div>
    </div>
  </div>
</div>