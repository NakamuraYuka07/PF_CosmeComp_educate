<div class="mx-auto container">
  <div class="form-group form-inline row">
    <div class='col-md-8 mt-4'>
    <h4 class="p-3 mb-2 w-50 text-center" style="color: #494949; background: #80aba9; border-left: solid 5px #2f4f4f;"><%= @user.nickname %>さんの会員情報編集</h4>
      <%= form_with model: @user, url: admin_user_path, local: true do |f| %>
      <table class="table  table-borderless">
        <tr>
          <td><%= f.label:会員ID , class: "float-left" %></td>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <td><%= f.label :ニックネーム , class: "float-left" %></td>
          <td><%= f.text_field :nickname, class:"form-control" %></td>
        </tr>
        <tr>
          <td><%= f.label:生年月日, class: "float-left" %></td>
          <td><%= f.text_field :birth_year, class:"form-control" %></td>
          <td><%= f.text_field :birth_month, class:"form-control" %></td>
          <td><%= f.text_field :birth_day, class:"form-control" %></td>
        </tr>
        <tr>
          <td><%= f.label :年齢, class: "float-left" %></td>
          <td><%= f.text_field :age, class:"form-control" %></td>
        </tr>
        <tr>
          <td><%= f.label :肌質 , class: "float-left" %></td>
          <td><%= f.text_field :skin_type, class:"form-control" %></td>
        </tr>
        <tr>
          <td><%= f.label :"会員ステータス", class: "float-left" %></td>
          <td> 
            <%= f.radio_button :is_deleted, false %><span class='mr-3'> 有効 </span>
            <%= f.radio_button :is_deleted, true %><span> 退会 </span>
          </td>
        </tr>
        <tr>
          <td></td>
          <td></td>
          <td><%= f.submit "変更を保存", class: "btn btn-outline-success" %></td>
        </tr>
        </table>
      </div>
      <% end %>
    </div>
  </div>