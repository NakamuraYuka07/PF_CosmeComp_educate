<div class="container">
  <div class="row mt-5 mb-4">
    <div class="col-3 col-md-6">
      <h4 class="p-3 mb-2 w-50 text-center" style="color: #494949; background: #80aba9; border-left: solid 5px #2f4f4f;">商品詳細</h4>
    </div>
  </div>
  <div class="row mt-4 mb-5">
    <div class="col-4">
      <%= attachment_image_tag @item, :item_image , format: 'jpg', fallback: "no_image.jpg", size: "300x250" %>
    </div>
    <div class="col-8">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>商品名</th>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td><%= @item.comp_category.name %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td><%= @item.explanation %></td>
          </tr>
          
          <tr>
            <th>成分</th>
            <td><%= @item.component %></td>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <td>
              <% if @item.sale_status? %>
                <div class="text-success">販売</div>
              <% else %>
                <div class="text-secondary">廃盤</div>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row mt-5">
		<div class="col-4 offset-4">
		  <div class="text-center">
		    <%= link_to "編集する" ,edit_admin_item_path(@item), class: "btn btn-outline-success" %>
		  </div>
		</div>
	</div>
</div>