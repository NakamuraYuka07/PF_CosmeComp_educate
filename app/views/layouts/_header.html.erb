<header>
  <nav class="navbar navbar-expand-lg navbar-light" style="background-color:#bc8f8f;">
    <div class="container">
      <nav class="navbar-brand navbar-left header-logo">
        <%= link_to root_path do %>CosmeComponent<% end %></nav>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="nav navbar-nav ml-auto">
        <!-- 利用者がログインしている時 -->
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to user_path(current_user) do %>
              <i class="fas fa-user-cog"> マイページ </i>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to items_path do %>
              <i class="fas fa-birthday-cake"> 商品一覧 </i>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to components_path do %>
              <i class="fas fa-cart-arrow-down"> 成分一覧 </i>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fas fa-sign-out-alt"> ログアウト </i>
            <% end %>
          </li>
        <!-- 管理者がログインしている時 -->
        <% elsif admin_signed_in? %>
          <li class="nav-item">
            <%= link_to admin_users_path do %>
              <i class="fas fa-users"> 利用者一覧 </i>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to admin_items_path do %>
              <i class="fas fa-birthday-cake"> 商品一覧 </i>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to admin_components_path do %>
              <i class="fas fa-paperclip"> 成分一覧 </i>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to destroy_admin_session_path, method: :delete do %>
              <i class="fas fa-sign-out-alt"> ログアウト </i>
            <% end %>
          </li>
        <!-- 利用者ログインしていない時 -->
        <% elsif user_signed_in? %>
          <li class="nav-item">
            <%= link_to root_path do %>
              <i class="fas fa-home"> トップページ </i>
            <% end %>
          <li class="nav-item">
            <%= link_to new_customer_registration_path do %>
              <i class="fas fa-pencil-alt"> 新規登録 </i>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_customer_session_path do %>
              <i class="fas fa-sign-in-alt"> ログイン </i>
            <% end %>
          </li>
          <!-- 管理者ログインしていない時 -->
          <% else admin_signed_in? %>
          <li class="nav-item">
            <%= link_to admin_root_path do %>
              <i class="fas fa-home"> トップページ </i>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_admin_registration_path do %>
              <i class="fas fa-pencil-alt"> 新規登録 </i>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_admin_session_path do %>
              <i class="fas fa-sign-in-alt"> ログイン </i>
            <% end %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <!-- 検索フォーム -->
</header>